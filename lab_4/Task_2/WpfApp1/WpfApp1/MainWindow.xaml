<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MouseDown="ChangeColor_MainWindow"
        Icon="C:\Users\user\Desktop\3_семестр\МиСППИ\Design_user_interface\lab_4\Task_2\WpfApp1\WpfApp1\icon.ico"
        Title="Лаб 4/5 Чупеев Андрей" Height="450" Width="800">
    <Grid>
        <Button
            Height="50"
            Width="200"
            Content="Красный"
            FontSize="22"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Click="ChangeColor_Red"
            Margin="20,20,20,20">
        </Button>
        <Button
            Height="50"
            Width="200"
            Content="Желтый"
            FontSize="22"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Click="ChangeColor_Yellow"
            Margin="20,20,20,20">
        </Button>
        <Button
            Height="50"
            Width="200"
            Content="Зеленый"
            FontSize="22"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Click="ChangeColor_Green"
            Margin="20,20,20,20">
        </Button>
    </Grid>
</Window>
